@model IEnumerable<BookViewModel>

@{
    ViewData["Title"] = "Unapproved books";
}

<div>
    <div class="row">
        @foreach (var book in Model)
        {
            <div class="col-md-3 mt-5 mb-4">
                <a asp-area="admin" asp-controller="Book" asp-action="CurrentBook" asp-route-bookId="@book.Id" asp-route-userId="@book.UserId">
                    <div class="card bg-dark text-light h-100">
                        <img title="@book.Title" src="@book.ImageUrl" alt="Book" height="300">
                    </div>
                </a>
            </div>
        }
    </div>
</div>