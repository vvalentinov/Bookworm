@model List<BookViewModel>

@{
    this.ViewData["Title"] = "Unapproved Books";
}

@if (Model.Any() == false)
{
    <h2 class="text-center pt-5">There are no books waiting to be approved!</h2>
}
else
{
    <h2 class="text-center pt-5">Manage Unapproved Books</h2>
    <div class="my-5">
        <table class="table table-striped table-dark table-bordered" id="dataTable">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Book</th>
                    <th class="text-center" scope="col">Approve</th>
                    <th class="text-center" scope="col">Delete</th>
                    <th class="text-center" scope="col">View</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i <= Model.Count() - 1; i++)
                {
                    <tr>
                        <th scope="row" class="text-center align-middle">@(i + 1)</th>
                        <td class="align-middle">@Model[i].Title</td>

                        <td class="text-center align-middle">
                            <a class="btn btn-success modalBtn" data-model-id="@Model[i].Id" data-bs-toggle="modal" data-bs-target="#approveBookModal">
                                <i class="fa-solid fa-circle-check fa-xl px-2"></i>
                            </a>
                        </td>
                        <td class="text-center align-middle">
                            <a class="btn btn-danger modalBtn" data-model-id="@Model[i].Id" data-bs-toggle="modal" data-bs-target="#deleteBookModal"><i class="fa-solid fa-trash-can fa-xl px-2"></i></a>
                        </td>
                        <td class="text-center align-middle">
                            <a asp-area="admin" asp-controller="Book" asp-action="CurrentBook" asp-route-bookId="@Model[i].Id" class="btn btn-success">
                                <i class="fa-solid fa-expand fa-xl px-2"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<!-- Approve Book Modal -->
<div
    class="modal fade"
    id="approveBookModal"
    tabindex="-1"
    aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Approve Book</h1>
            </div>
            <div class="modal-body text-center">
                <strong>Are you sure you want to approve this book?</strong>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-dark" data-bs-dismiss="modal">Close</button>
                <form method="post" asp-area="admin" asp-controller="Book" asp-action="ApproveBook">
                    <input type="hidden" name="bookId" class="modelIdInput" value="" />
                    <button type="submit" class="btn btn-danger">Approve</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Delete Book Modal -->
<div
    class="modal fade"
    id="deleteBookModal"
    tabindex="-1"
    aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Delete Book</h1>
            </div>
            <div class="modal-body text-center">
                <strong>Are you sure you want to delete this book?</strong>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-dark" data-bs-dismiss="modal">Close</button>
                <form method="post" asp-area="admin" asp-controller="Book" asp-action="Delete">
                    <input type="hidden" name="bookId" class="modelIdInput" value="" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/modal.js"></script>
    <script src="~/lib/datatables.net/jquery.dataTables.min.js"></script>
    <script src="~/js/datatable.js"></script>
}