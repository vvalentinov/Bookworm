@model IEnumerable<QuoteViewModel>

@{
    ViewData["Title"] = "Unapproved quotes";
    var index = 1;
}

<table class="table table-dark table-bordered table-responsive my-5">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Quote</th>
            <th class="text-center" scope="col">Author</th>
            <th class="text-center" scope="col">Book</th>
            <th class="text-center" scope="col">Movie</th>
            <th class="text-center" scope="col">Approve</th>
            <th class="text-center" scope="col">Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var quote in Model)
        {
            <tr>
                <th scope="row" class="text-center align-middle">
                    @index
                </th>
                <td class="align-middle">@quote.Content</td>
                @if (quote.AuthorName != null)
                {
                    <td class="text-center align-middle">@quote.AuthorName</td>
                }
                else
                {
                    <td class="text-center align-middle"><i class="fa-solid fa-minus fa-xl"></i></td>
                }
                @if (quote.BookTitle != null)
                {
                    <td class="text-center align-middle">@quote.BookTitle</td>
                }
                else
                {
                    <td class="text-center  align-middle"><i class="fa-solid fa-minus fa-xl"></i></td>
                }
                @if (quote.MovieTitle != null)
                {
                    <td class="text-center  align-middle">@quote.MovieTitle</td>
                }
                else
                {
                    <td class="text-center align-middle"><i class="fa-solid fa-minus fa-xl"></i></td>
                }
                <td class="text-center align-middle">
                    <a class="btn btn-success" asp-action="ApproveQuote" asp-controller="Quote" asp-area="admin" asp-route-id="@quote.Id" asp-route-userId="@quote.UserId"><i class="fa-solid fa-circle-check fa-xl px-2"></i></a>
                </td>
                <td class="text-center align-middle">
                    <a class="btn btn-danger" asp-action="DeleteQuote" asp-controller="Quote" asp-area="admin" asp-route-id="@quote.Id"><i class="fa-solid fa-trash-can fa-xl px-2"></i></a>
                </td>
            </tr>
            index++;
        }
    </tbody>
</table>