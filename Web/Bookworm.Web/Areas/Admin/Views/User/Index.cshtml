@model IEnumerable<UsersListViewModel>

@{
    ViewData["Title"] = "Manage Users";
}

<h1 class="text-center mt-5">Users</h1>

<table class="table table-striped table-dark table-bordered" id="dataTable" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td class="align-middle">@user.Username</td>
                <td class="align-middle">@user.Email</td>
                <td class="text-center">
                    <a asp-area="admin" asp-controller="User" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-danger">Edit User</a>
                    <a asp-area="admin" asp-controller="User" asp-action="Roles" asp-route-userId="@user.Id" class="btn btn-danger">User Role</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="~/lib/datatables.net/jquery.dataTables.min.js"></script>
    <script src="~/js/datatable.js"></script>
}