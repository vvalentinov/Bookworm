@model IEnumerable<BookViewModel>

@{
    this.ViewData["Title"] = "Favorite Books";
}

<div class="text-center textContainer col-5">
    <h1 class="display-4">@this.ViewData["Title"]</h1>
</div>


<div class="row">
    @foreach (var book in Model)
    {
        <div class="col-md-3 mt-5 mb-4">
            <div class="card bg-dark text-light h-100">
                <img title="@book.Title" src="@book.ImageUrl" alt="Book" height="300">
                <div class="card-body ">
                    <h5 class="card-title text-center">@book.Title</h5>
                    <div class="text-center">
                        <a asp-action="CurrentBook" asp-controller="Book" asp-route-id="@book.Id" class="btn button mb-2">View Book</a>
                        <a asp-action="DeleteFromFavorites" asp-controller="FavoriteBook" asp-route-bookId="@book.Id" class="btn btnDanger">Remove Book</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>


