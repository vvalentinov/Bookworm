@model RandomBookFormViewModel

@{
    this.ViewData["Title"] = "Random Book Generator";
}
<div class="d-flex justify-content-center mt-5">
    <div class="card text-center title-card animate__animated animate__jackInTheBox">
        <div class="card-body">
            <h3>@this.ViewData["Title"]<i class="fas fa-cog icon ms-3"></i></h3>
        </div>
    </div>
</div>

<form method="post" asp-controller="Book" asp-action="Random" class="col-8 mx-auto d-flex justify-content-center flex-column">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group fs-4 mt-4">
        <label asp-for="CategoryName">Select Category</label>
        <select asp-for="CategoryName" asp-items="@Model.Categories" size="8" aria-label="size 5 select example" class="form-select form-control fs-5"></select>
    </div>
    <div class="form-group mt-4">
        <label class="fs-4" asp-for="@Model.CountBooks">Select Numbet of books:</label>
        <br>

        <input  asp-for="@Model.CountBooks" id="five" type="radio" name="CountBooks" value=5>
        <label class="fs-5" for="five">5</label><br>
        <input asp-for="@Model.CountBooks" id="ten" type="radio" name="CountBooks" value=10>
        <label class="fs-5" for="ten">10</label><br>
        <input asp-for="@Model.CountBooks" id="fifteen" type="radio" name="CountBooks" value=15>
        <label class="fs-5" for="fifteen">15</label><br>
        <input asp-for="@Model.CountBooks" id="twenty" type="radio" name="CountBooks" value=20>
        <label class="fs-5" for="twenty">20</label>
    </div>
    <div class="text-center mt-4 mb-4">
        <button type="submit" class="btn button fs-5"><strong>Generate</strong></button>
    </div>
</form>