@model RandomBookFormViewModel

@{
    this.ViewData["Title"] = "Random Book Generator";
}
<div class="col d-flex justify-content-center animate__animated animate__zoomIn">
    <div id="textCard" class="card col-9 text-center">
        <div class="card-body">
            <h1 class="display-4">@this.ViewData["Title"]<i class="fas fa-cog icon"></i></h1>
        </div>
    </div>
</div>

<form method="post" asp-controller="Book" asp-action="Random" class="col-lg-8 offset-lg-2">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="CategoryName"><strong>Select Category</strong></label>
        <select asp-for="CategoryName" asp-items="@Model.Categories" size="8" aria-label="size 5 select example" class="form-select form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="@Model.CountBooks">Select Numbet of books:</label><br>
        <input asp-for="@Model.CountBooks" id="five" type="radio" name="CountBooks" value=5>
        <label for="five">5</label><br>
        <input asp-for="@Model.CountBooks" id="ten" type="radio" name="CountBooks" value=10>
        <label for="ten">10</label><br>
        <input asp-for="@Model.CountBooks" id="fifteen" type="radio" name="CountBooks" value=15>
        <label for="fifteen">15</label><br>
        <input asp-for="@Model.CountBooks" id="twenty" type="radio" name="CountBooks" value=20>
        <label for="twenty">20</label>
    </div>
    <div class="text-center">
        <button type="submit" class="btn button">Generate</button>
    </div>
</form>