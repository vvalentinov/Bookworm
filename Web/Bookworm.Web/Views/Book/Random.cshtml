@model RandomBookInputModel

@{
    this.ViewData["Title"] = "Random Book Generator";
    var titleCardModel = new TitleCardPartialViewModel { Title = "Random Book Generator", IconClass = "fa-cog" };
}

@section Styles {
    <link rel="stylesheet" href="~/css/bookRandom.css" asp-append-version="true" />
}

<partial name="PartialViews/_TitleCardPartial" model=titleCardModel />

<section class="randomBooksSection">
    <form method="post" asp-controller="Book" asp-action="Random" class="randomBooksForm">

        <div asp-validation-summary="All" class="text-danger"></div>

        <h3 class="text-center">Select Category</h3>
        <div class="form-group">
            <select asp-for="CategoryId"
                    size="8"
                    aria-label="size 5 select example"
                    class="form-select form-control">
                @await Component.InvokeAsync("Categories")
            </select>
        </div>

        <h3 class="text-center mt-4">Select number of books</h3>
        <div class="radioButtonsContainer">
            <div class="btn-group"
                 role="group"
                 aria-label="Basic radio toggle button group">

                <input asp-for="@Model.CountBooks"
                       type="radio"
                       class="btn-check"
                       name="CountBooks"
                       id="btnradio1"
                       autocomplete="off"
                       value="5">
                <label class="btn" for="btnradio1">Five</label>

                <input asp-for="@Model.CountBooks"
                       type="radio"
                       class="btn-check"
                       name="CountBooks"
                       id="btnradio2"
                       autocomplete="off"
                       value="10">
                <label class="btn" for="btnradio2">Ten</label>

                <input asp-for="@Model.CountBooks"
                       type="radio"
                       class="btn-check"
                       name="CountBooks"
                       id="btnradio3"
                       autocomplete="off"
                       value="15">
                <label class="btn" for="btnradio3">Fifteen</label>

                <input asp-for="@Model.CountBooks"
                       type="radio"
                       class="btn-check"
                       name="CountBooks"
                       id="btnradio4"
                       autocomplete="off"
                       value="20">
                <label class="btn" for="btnradio4">Twenty</label>
            </div>
        </div>

        <div class="text-center">
            <button type="submit" class="btn">
                Generate<i class="fa fa-gear ms-2"></i>
            </button>
        </div>
    </form>
</section>

