@model IEnumerable<BookViewModel>

@{
    this.ViewData["Title"] = "Favorite Books";
}

<div class="text-center textContainer col-5">
    <h1 class="display-4">@this.ViewData["Title"]</h1>
</div>

<div>
    <div class="row">
        @foreach (var book in Model)
        {
            <div class="card" style="width:20rem; margin-left:3rem;">
                <img class="zoom" src="@book.ImageUrl" alt="Book" height="300">
                <div class="card-body text-center" id="favoriteBookCardBody">
                    <h5 class="card-title">@book.Title</h5>
                    <a class="btn" asp-controller="Book" asp-action="CurrentBook" asp-route-id="@book.Id">View Book</a>
                    <a class="btn" asp-controller="Book" asp-action="DeleteFromFavorites" asp-route-bookId="@book.Id">Remove Book</a>
                </div>
            </div>
        }
    </div>
</div>