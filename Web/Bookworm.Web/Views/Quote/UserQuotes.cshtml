@model IEnumerable<QuoteViewModel>

@{
    ViewData["Title"] = "My Quotes";
}

<h2 class="text-center  animate__animated animate__zoomIn">@ViewData["Title"]</h2>



<div class="card-body table-responsive p-0">
    <table class="table table-hover text-nowrap">
        <thead>
            <tr>
                <th class="text-center">Content</th>
                <th class="text-center">Author</th>
                <th class="text-center">Movie</th>
                <th class="text-center">Book</th>
                <th class="text-center">Delete</th>
            </tr>
        </thead>
        <tbody>
           @foreach (var quote in Model)
        {
            <tr>
                <td class="text-center">@quote.Content</td>
                @if (@quote.AuthorName != null)
                {
                    <td>@quote.AuthorName</td>
                }
                else
                {
                    <td class="text-center">―</td>
                }
                @if (@quote.MovieTitle != null)
                {
                    <td class="text-center">@quote.MovieTitle</td>
                }
                else
                {
                    <td class="text-center">―</td>
                }
                @if (@quote.BookTitle != null)
                {
                    <td class="text-center">@quote.BookTitle</td>
                }
                else
                {
                    <td class="text-center">―</td>
                }
                <td class="text-center">
                    <form asp-action="Delete" asp-controller="Quote" asp-route-id="@quote.Id" id="deleteQuoteForm" method="post">
                    </form>
                    <button type="submit" class="btn" data-toggle="modal" data-target="#deleteQuoteModal">Delete Quote</button>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

<div class="modal fade" id="deleteQuoteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Delete Quote</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete your quote?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="deleteQuoteForm.submit()">Yes</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
