@model UploadQuoteViewModel

@{
    ViewData["Title"] = "Upload Quote";
    ViewData["Icon-Class"] = "fa-pen";
}

<partial name="PartialViews/_TitleCardPartial" />

<!-- Button trigger modal -->
<div class="uploadQuoteBtnsContainer">
    <button type="button" class="btn button btn-lg" data-bs-toggle="modal" data-bs-target="#movieModal">
        <strong>Movie Quote</strong><i class="fa-solid fa-film ms-3 fa-xl"></i>
    </button>

    <button type="button" class="btn button btn-lg" data-bs-toggle="modal" data-bs-target="#bookModal">
        <strong>Book Quote</strong><i class="fa-solid fa-book ms-3 fa-xl"></i>
    </button>

    <button type="button" class="btn button btn-lg" data-bs-toggle="modal" data-bs-target="#otherModal">
        <strong>General Quote</strong><i class="fa-solid fa-user-pen ms-3 fa-xl"></i>
    </button>
</div>


<!-- Modal for Movie Quote -->
<div class="modal fade " id="movieModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-4" id="exampleModalLabel">Upload Movie Quote</h1>
                <i class="fa-solid fa-x btn-modal-close" data-bs-dismiss="modal" aria-label="Close"></i>
            </div>
            <div class="modal-body uploadQuoteModalContainer">
                <img class="col-4" src="~/images/movieQuote.jpg" />
                <form method="post" asp-controller="Quote" asp-action="UploadMovieQuote">
                    <div class="form-group fs-4">
                        <label asp-for="@Model.MovieQuoteModel.Content">Content*</label>
                        <textarea asp-for="@Model.MovieQuoteModel.Content" class="form-control border border-2 fs-5" rows="6"></textarea>
                        <span asp-validation-for="@Model.MovieQuoteModel.Content" class="small text-danger"></span>
                    </div>
                    <div class="form-group mt-4 fs-4">
                        <label asp-for="@Model.MovieQuoteModel.MovieTitle">Movie Title*</label>
                        <input asp-for="@Model.MovieQuoteModel.MovieTitle" type="text" class="form-control border border-2 fs-5">
                        <span asp-validation-for="@Model.MovieQuoteModel.MovieTitle" class="small text-danger"></span>
                    </div>
                    <div class="text-center mt-4 mb-5">
                        <button type="submit" class="btn button form-button">
                            <strong>Upload<i class="ms-2 fas fa-upload icon"></i></strong>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Modal for Book Quote -->
<div class="modal fade" id="bookModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-4" id="exampleModalLabel">Upload Book Quote</h1>
                <i class="fa-solid fa-x btn-modal-close" data-bs-dismiss="modal" aria-label="Close"></i>
            </div>
            <div class="modal-body uploadQuoteModalContainer">
                <img class="img-fluid" src="~/images/bookQuote.jpg" />
                <form method="post" asp-controller="Quote" asp-action="UploadBookQuote">
                    <div class="form-group">
                        <label asp-for="@Model.BookQuoteModel.Content">Content*</label>
                        <textarea asp-for="@Model.BookQuoteModel.Content" class="form-control border border-2 fs-5" rows="6"></textarea>
                        <span asp-validation-for="@Model.BookQuoteModel.Content" class="small text-danger"></span>
                    </div>
                    <div class="form-group mt-4">
                        <label asp-for="@Model.BookQuoteModel.BookTitle">Book Title*</label>
                        <input asp-for="@Model.BookQuoteModel.BookTitle" type="text" class="form-control border border-2 fs-5">
                        <span asp-validation-for="@Model.BookQuoteModel.BookTitle" class="small text-danger"></span>
                    </div>
                    <div class="form-group mt-4">
                        <label asp-for="@Model.BookQuoteModel.AuthorName">Author's Name*</label>
                        <input asp-for="@Model.BookQuoteModel.AuthorName" type="text" class="form-control border border-2 fs-5">
                        <span asp-validation-for="@Model.BookQuoteModel.AuthorName" class="small text-danger"></span>
                    </div>
                    <div class="text-center mt-4 mb-5">
                        <button type="submit" class="btn button form-button">
                            <strong>Upload<i class="ms-2 fas fa-upload icon"></i></strong>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Modal for General Quote -->
<div class="modal fade" id="otherModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-4" id="exampleModalLabel">Upload General Quote</h1>
                <i class="fa-solid fa-x btn-modal-close" data-bs-dismiss="modal" aria-label="Close"></i>
            </div>
            <div class="modal-body uploadQuoteModalContainer">
                <img class="col-4" src="~/images/generalQuote.jpg" />
                <form method="post" asp-controller="Quote" asp-action="UploadGeneralQuote">
                    <div class="form-group fs-4">
                        <label asp-for="GeneralQuoteModel.Content">Content*</label>
                        <textarea asp-for="GeneralQuoteModel.Content" class="form-control border border-2 fs-5" rows="6"></textarea>
                        <span asp-validation-for="GeneralQuoteModel.Content" class="small text-danger"></span>
                    </div>
                    <div class="form-group mt-4 fs-4">
                        <label asp-for="GeneralQuoteModel.AuthorName">Author's Name*</label>
                        <input asp-for="GeneralQuoteModel.AuthorName" type="text" class="form-control border border-2 fs-5">
                        <span asp-validation-for="GeneralQuoteModel.AuthorName" class="small text-danger"></span>
                    </div>
                    <div class="text-center mt-4 mb-5">
                        <button type="submit" class="btn button form-button">
                            <strong>Upload<i class="ms-2 fas fa-upload icon"></i></strong>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>