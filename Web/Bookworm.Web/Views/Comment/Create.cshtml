@model CreateCommentInputModel

@{
    ViewData["Title"] = "Post Comment";
}

<div class="col d-flex justify-content-center">
    <div id="textCard" class="card col-6 text-center">
        <div class="card-body">
            <h1 class="display-4">@ViewData["Title"] <i class="far fa-comment"></i></h1>
        </div>
    </div>
</div>

<form method="post" asp-action="Create">
    <div class="form-group">
        <label asp-for="BookTitle">Book</label>
        <input asp-for="BookTitle" type="text" class="form-control" value="@Model.BookTitle" readonly>
    </div>
    <div class="form-group">
        <label asp-for="Content">Content*</label>
        <textarea asp-for="Content" class="form-control" rows="15"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <input type="hidden" name="bookId" value="@Model.BookId">
    <hr />
    <div class="text-center">
        <input type="submit" class="button btn" value="Post Comment" />
    </div>

</form>




<script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        plugins: [
            "image paste table link code media"
        ]
    });
</script>