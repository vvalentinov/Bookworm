@model QuizViewModel

@{
    ViewData["Title"] = "Quiz";
    int counter = 1;
}

<div class="text-center textContainer col-4">
    <h1 class="text-center">@Model.Category</h1>
</div>

<form asp-action="Quiz" asp-controller="Quiz" method="post" class="col-lg-12 ">
    @for (var i = 0; i < @Model.Questions.Count(); i++)
    {
        var question = @Model.Questions[i];
        <h2>@question.QuestionName</h2>
        <input type="hidden" asp-for="@Model.Questions[i].QuestionName" value="@question.QuestionName" />
        <input type="hidden" asp-for="@Model.Questions[i].CorrectAnswer" value="@question.CorrectAnswer" />

  
        <input asp-for="@Model.Questions[i].SelectedAnswer" type="radio" value="@Model.Questions[i].FirstOption">
        <label id="customLabel">@Model.Questions[i].FirstOption</label>
        <br>

        <input asp-for="@Model.Questions[i].SelectedAnswer" type="radio" value="@Model.Questions[i].SecondOption">
        <label id="customLabel">@Model.Questions[i].SecondOption</label>
        <br>

        <input asp-for="@Model.Questions[i].SelectedAnswer" type="radio" value="@Model.Questions[i].ThirdOption">
        <label id="customLabel">@Model.Questions[i].ThirdOption</label>
        <br>

        <input asp-for="@Model.Questions[i].SelectedAnswer" type="radio" value="@Model.Questions[i].FourthOption">
        <label id="customLabel">@Model.Questions[i].FourthOption</label>
        <br>

        <hr />
    }
    <div class="text-center">
        <button asp-action="Quiz" asp-controller="Quiz" type="submit" class="btn">Submit Quiz</button>
    </div>
</form>