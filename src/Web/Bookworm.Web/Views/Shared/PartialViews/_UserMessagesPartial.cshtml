@{
    if (TempData[ErrorMessage] != null)
    {
        <script type="module">
            import { createToast } from '/js/toast.js';
            let message = '@Html.Raw(Json.Serialize(TempData[ErrorMessage]))';
            message = message.substring(1, message.length - 1);
            createToast('Error Message', message, 'bg-danger');
        </script>
    }

    if (TempData[WarningMessage] != null)
    {
        <script type="module">
            import { createToast } from '/js/toast.js';
            let message = '@Html.Raw(Json.Serialize(TempData[WarningMessage]))';
            message = message.substring(1, message.length - 1);
            createToast('Warning Message', message, 'bg-warning');
        </script>
    }

    if (TempData[SuccessMessage] != null)
    {
        <script type="module">
            import { createToast } from '/js/toast.js';
            let message = '@Html.Raw(Json.Serialize(TempData[SuccessMessage]))';
            message = message.substring(1, message.length - 1);
            createToast('Success Message', message, 'bg-success');
        </script>
    }
}
