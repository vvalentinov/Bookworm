@model int

<div class="sortCommentsBtnsContainer">
    <div class="btn-group"
         role="group"
         aria-label="Basic radio toggle button group">
        <input type="radio"
               class="btn-check"
               name="btnradio"
               id="sortCommentsByDateAsc"
               autocomplete="off"
               onclick="getSortedComments('CreatedOnAsc', @Model)">
        <label class="btn border border-2" for="sortCommentsByDateAsc">Sort by date asc</label>

        <input type="radio"
               class="btn-check"
               name="btnradio"
               id="sortCommentsByDateDesc"
               autocomplete="off"
               onclick="getSortedComments('CreatedOnDesc', @Model)"
               checked>
        <label class="btn border border-2" for="sortCommentsByDateDesc">Sort by date desc</label>

        <input type="radio"
               class="btn-check"
               name="btnradio"
               id="sortCommentsByNetWorthDesc"
               autocomplete="off"
               onclick="getSortedComments('NetWorthDesc', @Model)">
        <label class="btn border border-2" for="sortCommentsByNetWorthDesc">Sort by net worth desc</label>
    </div>
</div>